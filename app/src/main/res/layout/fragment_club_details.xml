<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.ClubDetailsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/neutral_light"
        android:paddingVertical="16dp"
        android:text="Club"
        android:textAlignment="center"
        android:textAppearance="@font/segoe_ui"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textAlignment="center"
                android:textColor="@color/primary_dark_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="Sdkjfasd" />


            <ImageView
                android:id="@id/poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="250dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/segoe_ui"
                android:text="About club"
                android:textColor="@color/primary_dark_blue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/segoe_ui"
                android:textColor="@color/primary_dark_blue"
                android:textSize="20sp"
                tools:text="dfgsdfgsdfgsdfgsdfgdsfgdsfgddfgdsfgdsfgdfgdfgdfgdfgdsfgdgfsdfg" />


            <Button
                android:id="@+id/subscribe_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@drawable/subscribe_button_shape"
                android:fontFamily="@font/segoe_ui"
                android:text="Subscribe"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Upcoming events"
                android:textColor="@color/primary_dark_blue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/club_details_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>